<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal" android:id="@+id/background"
>

    <TextView
            android:text="id"
            android:layout_width="match_parent"
            android:layout_height="60dp" android:id="@+id/id" android:layout_weight="3"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <TextView
                android:text="count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/count"/>
        <TextView
                android:text="flg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/flg"/>
    </LinearLayout>
</LinearLayout>